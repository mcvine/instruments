<?xml version="1.0"?>

<!DOCTYPE scatterer>

<!-- mcweights: monte-carlo weights for 3 possible processes:
     absorption, scattering, transmission -->
<homogeneous_scatterer mcweights="0, 1, 0.1">

  <KernelContainer average="yes">

    <Phonon_IncoherentElastic_Kernel dw_core='0.00701434948808*angstrom**2'>
    </Phonon_IncoherentElastic_Kernel>

    <ConstantQEKernel momentum-transfer="2/angstrom" energy-transfer="10*meV"/>

    <ConstantQEKernel momentum-transfer="5/angstrom" energy-transfer="40*meV"/>

    <ConstantQEKernel momentum-transfer="5/angstrom" energy-transfer="10*meV"/>

  </KernelContainer>
</homogeneous_scatterer>
